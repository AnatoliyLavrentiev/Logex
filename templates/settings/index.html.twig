{% extends 'base.html.twig' %}

{% block title %}Paramètres{% endblock %}

{% block body %}
<div class="container mt-5">
<h1 class="mb-4 text-primary fw-bold text-center">
    <i class="fa-solid fa-gear me-2"></i> Paramètres
</h1>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><i class="fa-solid fa-sliders"></i> Configuration Générale</h5>
                        <p class="card-text">Modifier les paramètres globaux de l'application (nom du site, maintenance, SEO, etc.).</p>
                    </div>
                    <div class="mt-3">
                        <a href="{{ path('settings_general') }}" class="btn btn-outline-primary w-100">Configurer</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><i class="fa-solid fa-users-cog"></i> Gestion des utilisateurs</h5>
                        <p class="card-text">Gérer les rôles et droits des utilisateurs.</p>
                    </div>
                    <div class="mt-3">
                        <a href="{{ path('settings_users') }}" class="btn btn-outline-primary w-100">Gérer</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
