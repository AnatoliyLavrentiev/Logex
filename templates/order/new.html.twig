{% extends 'base.html.twig' %}

{% block title %}Новый заказ{% endblock %}

{% block body %}
<div class="container mt-5">
  <h1 class="mb-4">Создать новый заказ</h1>
  {{ form_start(form) }}
    <div class="mb-3">
      {{ form_row(form.clientData, { label: 'Данные клиента (JSON)' }) }}
    </div>
    <div class="mb-3">
      <h4>Позиции заказа</h4>
      {{ form_widget(form.orderItems) }}
    </div>
    <button type="submit" class="btn btn-primary">Оформить заказ</button>
  {{ form_end(form) }}
</div>
{% endblock %}
